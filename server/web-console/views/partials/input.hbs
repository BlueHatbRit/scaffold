<dl class="form-group">
    <dt class="input-label">
        <label for="{{id}}">{{title}}</label>
    </dt>
    <dd>
        <input id="{{id}}" class="form-control" name="{{name}}" type="{{type}}">
        {{#if note}}
            <p class="note">{{note}}</p>
        {{/if}}
    </dd>
    {{#if error}}
        <dd class="error" hidden>
            {{error}}
        </dd>
    {{/if}}
</dl>