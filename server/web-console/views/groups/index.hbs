{{!< ../default}}
{{> nav}}
<main id="content" class="container">
    {{> flash}}
    <div class="row">
        <div class="column">
            {{#if groups}}
                <h1 class="inline">Groups</h1>
                <a class="button float-right" href="/groups/new">New group</a>

                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each groups}}
                            <tr>
                                <td><a href="/groups/{{id}}">{{name}}</a></td>
                                <td><button class="delete-btn float-right" value="{{id}}">Delete</button></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                <center>
                    <h1>There aren't any groups yet</h1>
                    <a class="button" href="/groups/new">Create a group now</a>
                </center>
            {{/if}}
        </div>
    </div>
</main>

<script src="/static/js/groups/index.js"></script>