{{!< ../default}}
{{> nav}}
<main id="content" class="container">
    {{> flash}}
    <center>
        <div class="row">
            <div class="column">
                <center>
                    <h1>Update flag</h1>
                    <form method="POST" action="/flags/{{id}}" id="create-flag">
                        <label for="name">Flag name</label>
                        <input id="flag-name" name="name" type="text" value="{{name}}" placeholder="The name you'll use in your code">

                        <label for="description">Description</label>
                        <input id="flag-description" name="description" type="text" value="{{description}}" placeholder="Something to help identify the feature">

                        <div>
                            <label for="active" class="label-inline">Flag active</label>
                            <input type="checkbox" id="active" name="active" value="true" {{activeChecked}}>
                        </div>

                        <input type="submit" value="submit">
                    </form>
                </center>
            </div>
        </div>
    </center>
</main>