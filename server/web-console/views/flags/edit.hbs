{{!< ../default}}
{{> nav}}
<main id="content" class="container">
    {{> flash}}
    <div class="row">
        <div class="column">
            <h1>{{name}}</h1>
            <form method="POST" action="/flags/{{id}}" id="create-flag">
                <label for="description">Description</label>
                <input id="flag-description" name="description" type="text" value="{{description}}">

                <div>
                    <label for="active" class="label-inline">Flag active</label>
                    <input type="checkbox" id="active" name="active" value="true" {{activeChecked}}>
                    {{> tooltip copy="A global kill switch, if this is unchecked then no one will have access."}}
                </div>

                <input type="submit" value="submit">
            </form>

            <div>
                <h2 class="inline">Groups with access</h2>
                <a class="button float-right" href="/flags/{{id}}/groups/new">Grant a group access</a>
                {{#if groups}}
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th class="table-right">Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each groups}}
                            <tr>
                                <td><a href="/groups/{{id}}">{{name}}</a></td>
                                <td class="table-right">
                                    <a href="#">
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <center>
                    <p>No groups have been granted access to this feature</p>
                </center>
                {{/if}}
            </div>
        </div>
    </div>
</main>