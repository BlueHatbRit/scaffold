{{!< ../default}}
{{> nav}}
<main id="content" class="container">
    {{> flash}}
    <div class="row">
        <div class="column">
            <h1>Create a new flag</h1>
            <form method="POST" action="/flags" id="create-flag">
                <dl class="form-group">
                    <dt class="input-label">
                        <label for="name">Flag Name</label>
                    </dt>
                    <dd>
                        <input id="flag-name" class="form-control" name="name" type="text">
                        <p class="note">A hyphenated name which you'll use in your code to refer to this flag.</p>
                    </dd>
                </dl>

                <dl class="form-group">
                    <dt class="input-label">
                        <label for="description">Description (optional)</label>
                    </dt>
                    <dd>
                        <input id="flag-description" class="form-control" name="description" type="text">
                        <p class="note">A short description to help others understand what this feature is.</p>
                    </dd>
                </dl>

                <dl class="form-group">
                    <dd>
                        <input type="checkbox" id="active" name="active" {{boolToCheckbox active}}>
                        <label for="active" class="input-label label-inline">Flag active</label>
                        <p class="note">A global kill switch, if this is unchecked then no one will have access.</p>
                    </dd>
                </dl>

                <dl class="form-group">
                    <dt class="input-label">
                        <label for="populationPercentage">Population Percentage (optional)</label>
                    </dt>
                    <dd>
                        <input id="population" class="form-control-small" name="population_percentage" type="number" min="0" step="1" max="100">
                        <p class="note">Incrementally roll out to a higher percentage of users as you desire. Set to 0 to turn this feature off.</p>
                    </dd>
                    <dd class="error" hidden>
                        Must be a number between 0-10.
                    </dd>
                </dl>

                <button id="create-flag-btn" type="submit" disabled="true">Create flag</button>
            </form>
        </div>
    </div>
</main>

<script src="/static/js/flags/new.js"></script>