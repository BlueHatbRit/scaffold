{{!< default}}
{{> nav}}
<main class="container" id="content">
    {{> flash}}
    <div class="row">
        <div class="column column-50">
            <h1>Sign up</h1>
            <p>We like to store minimal information on you, but you will need your own account. Sign up here to begin using the app!</p>
        </div>
        <section class="column column-50">
                <form id="create-account-form" method="POST" action="/signup">
                
                    <dl class="form-group">
                        <dt class="input-label">
                            <label for="email">Email Address</label>
                        </dt>
                        <dd>
                            <input id="email" class="form-control" name="email" type="email">
                            <p class="note">You'll use this to sign in your account, it must be valid in case you wish to reset your password later.</p>
                        </dd>
                        <dd class="error" hidden>
                            Invalid email address.
                        </dd>
                    </dl>

                    <dl class="form-group">
                        <dt class="input-label">
                            <label for="password">Password</label>
                        </dt>
                        <dd>
                            <input id="password" class="form-control" name="password" type="password">
                            <p class="note">Use at seven characters, with one numeral.</p>
                        </dd>
                        <dd class="error" hidden>
                            Passwords need a minimum of seven characters, and one number.
                        </dd>
                    </dl>
                    
                    <dl class="form-group">
                        <dt class="input-label">
                            <label for="confirmPassword">Re-enter Your Password</label>
                        </dt>
                        <dd>
                            <input id="confirm-password" class="form-control" name="confirmPassword" type="password">
                        </dd>
                        <dd class="error" hidden>
                            Both passwords must be the same.
                        </dd>
                    </dl>

                    <center>
                        <button id="create-account-btn" type="submit" disabled="true">Create an account</button>
                        {{#if termsExist}}
                            <p class="note">By clicking "Create an Account", you agree to our <a href="/terms">terms of service</a>. We'll occasionally send you account related emails.</p>
                        {{/if}}
                    </center>
                </form>
        </section>
    </div>
</main>

<script src="/static/js/signup.js"></script>